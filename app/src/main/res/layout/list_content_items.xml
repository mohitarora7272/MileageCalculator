<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearRecords"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/custom_shape_tv"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/tvVName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVFuelType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVMileageType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVNewReading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVFuel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVAvg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVPriceAvg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="4"
        android:gravity="center"
        android:textSize="10sp" />

</LinearLayout>